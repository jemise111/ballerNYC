body {
  background: url("<%= image_path('background.jpg') %>") no-repeat;
  background-size: cover;
  background-attachment: fixed;
}

.top-bar .row {
  margin-top: 12px;
}

.profile-picture {
  border-radius: 100%;
}

#welcome-top {
  min-height: 600px;
}

#animated-typing-container {
  display: inline-block;
  height: 130px;
  margin-left: 10%;
}

#animated-typing-container h1 {
  color: white;
  margin: 0;
  position: relative;
}

#learn-more-link {
  color: white;
  font-size: 18px;
  position: absolute;
  right: 1em;
}

#sign-in-form {
  margin-left: 13%;
  visibility: hidden;
}

#partial-session-new {
  margin-top: 50px;
  width: 180px;
}

#partial-session-new a {
  color: white;
  font-size: 14px;
}

.remember-me-link {
  display: inline;
}

.remember-me-link input[type="checkbox"] + label {
  color: white;
  margin: 0;
  padding: 0;
}

.submit-button {
  display: inline;
  padding: 0;
  margin-left: 10px;
}

.submit-button input {
  background: #420002;
  border: none;
  color: white;
  font: 14px "Source Sans Pro", "Helvetica", Helvetica, Arial, sans-serif;
  height: 35px;
  width: 65px;
}

.facebook-sign-in {
  background: #3B5998;
  padding: 10px;
  text-align: center;
  width: 100%;
}

#welcome-about {
  background: black;
  opacity: .8;
  min-height: 800px;
}

#court-search-results {
  float: left;
  text-align: center;
  width: 54%;
}

.result-court-box {
  display: inline-block;
  height: 220px;
  margin: 20px 10px;
  position: relative;
  text-align: center;
  vertical-align: middle;
  width: 250px;
}

.result-court-box img {
  height: 200px;
  width: auto;
}

.result-court-box-inner {
  height: 200px;
  overflow: hidden;
}

.result-court-header {
  background: #420002;
  left: 25px;
  opacity: .6;
  padding: 5px;
  position: absolute;
  top: 0;
  width: 200px;
}

.result-court-header a {
  color: white;
}

.result-court-footer {
  background: #650003;
  color: white;
  height: 50px;
  margin: -25px auto 0 auto;
  opacity: .8;
  padding: 2px 10px 10px 10px;
  width: 200px;
}

#map-container {
  height: 400px;
  margin: 20px 10px 0 0;
  position: fixed;
  right: 0;
  width: 44%;
  min-width: 300px;
}

#map-canvas {
  height: 100%;
  min-width: 300px;
}

#map-canvas img {
  max-width: none;
}

#profile-left-bar {
  background: grey;
  display: inline-block;
}

#profile-left-bar span {
  display: inline;
}

#profile-right-section {
  display: inline-block;
  height: 800px;
  width: 55%;
  vertical-align: top;
}

.game-view {
  background: white;
}

/* From http://css-tricks.com/snippets/css/css-box-shadow/ */
.one-edge-shadow {
  -webkit-box-shadow: 0 8px 6px -6px grey;
     -moz-box-shadow: 0 8px 6px -6px grey;
          box-shadow: 0 8px 6px -6px grey;
}

@media only screen and (max-width: 630px) {
  .top-bar-section ul {
    width: 50%;
  }

  .profile-picture {
    display: none;
  }

  #court-search-results {
    width: 100%;
  }

  .result-court-footer {
    margin: -50px auto 0 auto;
  }

  #map-container {
    height: 300px;
    margin: 10px auto 0 auto;
    position: static;
    width: 80%;
  }

  #profile-left-bar span {
    display: none;
  }
}

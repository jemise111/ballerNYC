body {
  background: url("<%= image_path('background.jpg') %>") no-repeat;
  background-size: cover;
  background-attachment: fixed;
}

.top-bar .row {
  margin-top: 12px;
}

.profile-picture {
  border-radius: 100%;
}

#welcome-top {
  min-height: 600px;
}

#animated-typing-container {
  display: inline-block;
  margin-left: 10%;
}

#animated-typing-container h1 {
  color: white;
  margin: 0;
  position: relative;
}

#learn-more-link {
  color: white;
  font-size: 18px;
  position: absolute;
  right: 1em;
}

#welcome-about {
  background: black;
  opacity: .8;
  min-height: 800px;
}

#court-search-results {
  float: left;
  text-align: center;
  width: 54%;
}

.result-court-box {
  display: inline-block;
  height: 220px;
  margin: 10px;
  text-align: center;
  vertical-align: middle;
  width: 250px;
}

.result-court-box img {
  height: 200px;
  width: auto;
}

.result-court-box-inner {
  height: 200px;
  overflow: hidden;
}

.result-court-overlay {
  background: grey;
  color: white;
  height: 50px;
  margin: -25px auto 0 auto;
  opacity: .8;
  padding: 2px 10px 10px 10px;
  width: 200px;
}

.result-court-footer {
  padding-top: 5px;
}

#map-container {
  height: 400px;
  margin: 30px 10px 0 0;
  position: fixed;
  right: 0;
  width: 44%;
  min-width: 300px;
}

/* #map-container {
  height: 300px;
  margin: 10px auto 0 auto;
  width: 80%;
} */

#map-canvas {
  height: 100%;
  min-width: 300px;
}

@media only screen and (max-width: 630px) {
  .profile-picture {
    display: none;
  }

  #court-search-results {
    width: 100%;
  }

  .result-court-overlay {
    margin: -50px auto 0 auto;
  }

  #map-container {
    height: 300px;
    margin: 10px auto 0 auto;
    position: static;
    width: 80%;
  }
}

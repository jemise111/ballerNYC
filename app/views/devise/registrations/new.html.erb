<div id="sign-up-form" class="devise-form">
  <h2>Sign up</h2>

  <br />

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div><%= f.text_field :name, autofocus: true, placeholder: 'Full Name' %></div>

    <div><%= f.email_field :email, placeholder: 'Email' %></div>

    <div><%= f.number_field :zip_code, in: (00000..99999), placeholder: 'Zip Code' %></div>

    <div><%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %></div>

    <div><%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password' %></div>

    <div><%= f.label :game_notifications, 'Notify me when players join my games' %>
    <%= f.check_box :game_notifications %></div>

    <div><%= f.label :court_notifications, 'Notify me when my courts get new games' %>
    <%= f.check_box :court_notifications %></div>

    <div class='submit-button'><%= f.submit "Sign up" %></div>

    <br />
    <br />

    <div class='facebook-sign-in button'>
      <i class='fa fa-facebook-square fa-lg'></i>
      <%= link_to "Sign in with Facebook", omniauth_authorize_path(resource_name, 'facebook') %>
    </div>
  <% end %>
</div>

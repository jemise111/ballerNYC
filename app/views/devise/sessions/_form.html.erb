<div id="partial-session-new">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div><%= f.email_field :email, placeholder: 'Email' %></div>

    <div><%= f.password_field :password, placeholder: 'Password', autocomplete: "off" %></div>

    <% if devise_mapping.rememberable? -%>
      <div class='remember-me-link'><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end %>

    <div class='submit-button .sign-in-button'><%= f.submit "Sign in" %></div>

    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />

    <br />
    <%= link_to "Don't have an account? Sign up", new_user_registration_path %><br />
    <br />


    <div class='facebook-sign-in button'>
      <i class='fa fa-facebook-square fa-lg'></i>
      <%= link_to "Sign in with Facebook", omniauth_authorize_path(resource_name, 'facebook') %>
    </div>

    <br />

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  <% end %>

</div>
